<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.example.darek.nav_10.MainActivity">

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:id="@+id/buttonStop"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonPause"
        android:layout_alignStart="@+id/buttonPause"
        android:layout_marginBottom="0dp"
        android:layout_alignRight="@+id/buttonPause"
        android:layout_alignEnd="@+id/buttonPause"
        android:textSize="18sp"
        android:layout_height="70dp" />

    <TextView
        android:text="GPS Accuracy\n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewGPSAccuracy"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location \n "
        android:id="@+id/TextViewGPSCoordinates"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKilometersPayed"
        tools:text="0km"
        android:textSize="40sp"
        android:layout_below="@+id/TextViewGPSAccuracy"
        android:layout_toStartOf="@+id/TextViewGPSCoordinates" />

    <TextView
        android:text="0km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKilometers"
        tools:text="0km"
        android:textSize="40sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/TextViewGPSAccuracy"
        android:layout_toRightOf="@+id/TextViewGPSCoordinates"
        android:layout_toEndOf="@+id/TextViewGPSCoordinates" />

    <Button
        android:text="Pause"
        android:layout_width="wrap_content"
        android:id="@+id/buttonPause"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/buttonStop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:id="@+id/buttonStart"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/buttonPause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/buttonStart"
        android:layout_marginTop="45dp">
        <Button
            android:text="Billabe Track"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonSwichToPayed"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_weight="1" />

        <Button
            android:text="Non Billable Track"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonSwitchToFree"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textAlignment="gravity" />
    </LinearLayout>

</RelativeLayout>